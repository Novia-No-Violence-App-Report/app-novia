<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="105dp"
        android:layout_gravity="fill"
        android:layout_marginHorizontal="1dp"
        android:layout_marginVertical="2dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp" >

        <ImageView
            android:id="@+id/imgTipsTrik"
            tools:src="@drawable/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="9dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/gambar_tips_dan_trik" />

        <TextView
            android:id="@+id/titleTipsTrik"
            tools:text="Lorem Ipsum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="110dp"
            style="@style/Text2"
            android:textColor="@color/novia_blue"
            android:textSize="17sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/descTipsTrik"
            android:text="@string/lorem_ipsum_dolor_sit_amet_blabla_consectum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="7dp"
            android:lineSpacingExtra="-2.5sp"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>