<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Novia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@color/novia_purple</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/novia_red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/novia_purple</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Text.Header1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Text.Header2">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Header3">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Header4">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="Text.Paragraph">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
</resources>